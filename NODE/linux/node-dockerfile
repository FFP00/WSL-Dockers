# Imagen base de Node Alpine
FROM node:alpine

# Crear alias para que cada vez que se hagan esos "comandos" se pueda acceder desde fuera
RUN echo "alias npm-run-dev='npm run dev -- --host 0.0.0.0'" >> ~/.profile \
    && echo "alias npm-run-preview='npm run preview -- --host 0.0.0.0'" >> ~/.profile\
        && echo "export PS1='\w # '" >> ~/.profile 

# Comando que se iniciara siempre al principio
CMD ["tail", "-f", "/dev/null"]
